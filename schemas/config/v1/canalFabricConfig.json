{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://judkins.house/apis/k2/v1/canalFabricConfig.json",

  "description": "Canal Fabric configuration",
  "properties": {
    "name": {
      "description": "name for the canal fabric configuration - used for referencing",
      "type": "string"
    },
    "type": {
      "description": "The type of the fabric being used",
      "enum": [ "canal" ]
    },
    "options": { "$ref": "http://judkins.house/apis/k2/v1/canalFabricOptions.json" }
  },

  "required": [
    "name",
    "type",
    "options"
  ],

  "type": "object"
}
