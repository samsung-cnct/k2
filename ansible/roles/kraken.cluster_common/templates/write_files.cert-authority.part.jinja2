- path: /etc/ssl/ca.pem
  encoding: "gz+b64"
  content: |
    {{ lookup('file', '{{config_base}}/{{cluster.name}}/certs/ca.pem') | gz | b64encode }}
- path: /etc/ssl/ca-key.pem
  encoding: "gz+b64"
  content: |
    {{ lookup('file', '{{config_base}}/{{cluster.name}}/certs/ca-key.pem') | gz | b64encode }}
